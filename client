#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <errno.h>
#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>
#include <netdb.h>
#include <string.h>

/* codul de eroare returnat de anumite apeluri */
extern int errno;

/* portul de conectare la server*/
int port;

char comanda[50], utilizator[20], parola[20], genul[15], titlu[20], artist[20], descriere[100], link_yt[30], com[100];
int id;
int sd;


int conectare ()
{
  printf ("[client]Introduceti numele de utilizator: ");
  fflush (stdout);
  scanf("%[^\n]%*c",utilizator);    
  if (write (sd,utilizator,strlen(utilizator)+1) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti parola: ");
  fflush (stdout);
  scanf("%[^\n]%*c",parola);    
  if (write (sd,parola, strlen(parola)+1) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
}

int inregistrare ()
{
  printf ("[client]Introduceti numele de utilizator: ");
  fflush (stdout);
  scanf("%[^\n]%*c",utilizator);    
  if (write (sd,utilizator,strlen(utilizator)+1) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti o parola: ");
  fflush (stdout);
  scanf("%[^\n]%*c",parola);    
  if (write (sd,parola, strlen(parola)+1) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Reintroduceti parola: ");
  fflush (stdout);
  scanf("%[^\n]%*c",parola);    
  if (write (sd,parola, strlen(parola)+1) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
}

