#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <errno.h>
#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>
#include <netdb.h>
#include <string.h>

/* codul de eroare returnat de anumite apeluri */
extern int errno;

/* portul de conectare la server*/
int port;

char comanda[50], utilizator[20], parola[20], genul[15], titlu[20], artist[20], descriere[100], link_yt[30], com[100];
int id;
int sd;


int conectare ()
{
  printf ("[client]Introduceti numele de utilizator: \n");
  fflush (stdout);
  scanf("%s",utilizator);    
  if (write (sd,utilizator,strlen(utilizator)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti parola: \n");
  fflush (stdout);
  scanf("%s",parola);    
  if (write (sd,parola, strlen(parola)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
}

int inregistrare ()
{
  printf ("[client]Introduceti numele de utilizator: \n");
  fflush (stdout);
  scanf("%s",utilizator);    
  if (write (sd,utilizator,strlen(utilizator)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti o parola: \n");
  fflush (stdout);
  scanf("%s",parola);    
  if (write (sd,parola, strlen(parola)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Reintroduceti parola: \n");
  fflush (stdout);
  scanf("%s",parola);    
  if (write (sd,parola, strlen(parola)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
}

int top ()
{
  printf ("[client]Alegeti genul muzical: \n");
  fflush (stdout);
  scanf("%s",genul);    
  if (write (sd,genul, strlen(genul)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
}

int adauga()
{
  printf ("[client]Introduceti numele melodiei: \n");
  fflush (stdout);
  scanf("%s",titlu);    
  if (write (sd,titlu,strlen(titlu)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti numele artistului: \n");
  fflush (stdout);
  scanf("%s",artist);    
  if (write (sd,artist, strlen(artist)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti genul muzical: \n");
  fflush (stdout);
  scanf("%s",genul);    
  if (write (sd,genul, strlen(genul)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti o scurta descriere: \n");
  fflush (stdout);
  scanf("%s",descriere);    
  if (write (sd,descriere, strlen(descriere)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
  printf ("[client]Introduceti un link catre melodie: \n");
  fflush (stdout);
  scanf("%s",link_yt);    
  if (write (sd,link_yt, strlen(link_yt)) <= 0)
  {
      perror ("[client]Eroare la write() spre server.\n");
      return errno;
  }
}

